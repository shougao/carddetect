<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_green_light"
    tools:context=".AnimalActivity">


    <ImageView
        android:id="@+id/firstImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/imageresult" />


    <ImageView
        android:id="@+id/secondImageView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="134dp"
        android:contentDescription="@string/imageresult" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="0dp"
        android:layout_marginStart="0dp"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:id="@+id/level3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_weight="1.0"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_contour_detect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="监测外围轮廓" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="按钮" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="按钮" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="按钮" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/level2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_weight="1.0"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_origin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="原始图" />

            <Button
                android:id="@+id/btn_multiqrcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="OTSU处理" />

            <Button
                android:id="@+id/btn_getCT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="遍历卡CT" />

            <Button
                android:id="@+id/btn_cut_qrcode"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="遍历二维码" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/level1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:orientation="horizontal"
            android:weightSum="1">

            <Button
                android:id="@+id/btn_grayImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="灰度化" />

            <Button
                android:id="@+id/btn_binaryImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="二值化" />

            <Button
                android:id="@+id/btn_erodeImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="图像腐蚀" />

            <Button
                android:id="@+id/btn_filterandcut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="过滤和切割" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>