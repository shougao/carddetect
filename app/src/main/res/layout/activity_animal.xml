<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AnimalActivity">


    <ImageView
        android:contentDescription="@string/imageresult"
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="289dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="0dp"
        android:layout_marginStart="0dp"
        android:gravity="center"
        android:weightSum="1"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/level2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_weight="1.0"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_origin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="原始图" />

            <Button
                android:id="@+id/btn_multiqrcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="多二维码识别" />

            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Button" />

            <Button
                android:id="@+id/btn_cut_qrcode"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="切割二维码" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/level1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:orientation="horizontal"
            android:weightSum="1">

            <Button
                android:id="@+id/btn_grayImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="灰度化" />

            <Button
                android:id="@+id/btn_binaryImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="二值化" />

            <Button
                android:id="@+id/btn_erodeImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="图像腐蚀" />

            <Button
                android:id="@+id/btn_filterandcut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="过滤和切割" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>